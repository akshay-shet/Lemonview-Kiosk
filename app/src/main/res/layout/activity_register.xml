<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111">

    <!-- LOGO -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="374dp"
        android:layout_height="98dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TITLE -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/register_title"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- NAME -->
    <EditText
        android:id="@+id/etName"
        android:autofillHints="name"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:hint="@string/register_name_label"
        android:inputType="textPersonName"
        android:importantForAutofill="yes"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:background="@drawable/card_bg_rounded"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- EMAIL -->
    <EditText
        android:id="@+id/etEmail"
        android:autofillHints="emailAddress"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:hint="@string/register_email_label"
        android:inputType="textEmailAddress"
        android:importantForAutofill="yes"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:background="@drawable/card_bg_rounded"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/etName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- DATE OF BIRTH LABEL -->
    <TextView
        android:id="@+id/tvDobLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_dob_label"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- DATE OF BIRTH INPUT -->
    <EditText
        android:id="@+id/etDob"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="YYYY.MM.DD"
        android:inputType="none"
        android:focusable="false"
        android:clickable="true"
        android:background="@drawable/card_bg_rounded"
        android:padding="16dp"
        android:drawableEnd="@drawable/ic_calendar"
        android:drawablePadding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        app:layout_constraintTop_toBottomOf="@id/tvDobLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- GENDER LABEL -->
    <TextView
        android:id="@+id/tvGenderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_gender_label"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/etDob"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- GENDER RADIO GROUP -->
    <RadioGroup
        android:id="@+id/rgGender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvGenderLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/rbMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_gender_male"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="32dp"
            android:buttonTint="#FFD400"/>

        <RadioButton
            android:id="@+id/rbFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_gender_female"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="32dp"
            android:buttonTint="#FFD400"/>

        <RadioButton
            android:id="@+id/rbOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_gender_other"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFD400"/>

    </RadioGroup>

    <!-- CONSENT -->
    <CheckBox
        android:id="@+id/checkConsent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/register_consent"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:padding="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:buttonTint="#FFD400"
        app:layout_constraintTop_toBottomOf="@id/rgGender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- NEXT BUTTON -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="24dp"
        android:text="@string/register_button"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="@drawable/btn_yellow_round"
        app:layout_constraintTop_toBottomOf="@id/checkConsent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
