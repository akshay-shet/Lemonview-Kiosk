<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F0F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo"
            android:scaleType="centerInside" />

        <!-- LOGO/TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【레몬뷰】"
            android:textColor="@color/yellow_main"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI 피부 분석 시스템"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="32dp" />

        <!-- DIVIDER -->
        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="@color/yellow_main"
            android:layout_marginBottom="32dp" />

        <!-- LOGIN TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_title"
            android:textColor="@color/yellow_main"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- NAME INPUT -->
        <EditText
            android:id="@+id/etLoginName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/card_bg_rounded"
            android:padding="12dp"
            android:hint="@string/login_name_hint"
            android:textColorHint="#888888"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:inputType="text"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="12dp" />

        <!-- DATE OF BIRTH INPUT -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_dob_label"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etLoginDob"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="YYYY.MM.DD"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/card_bg_rounded"
            android:padding="12dp"
            android:drawableEnd="@drawable/ic_calendar"
            android:drawablePadding="12dp"
            android:textColorHint="#888888"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="16dp"/>

        <!-- TERMS AND CONDITIONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/checkTerms"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:buttonTint="@color/yellow_main" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/login_terms"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- LOGIN BUTTON -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_yellow_round"
            android:text="@string/login_button"
            android:textColor="#1A1A1A"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- DIVIDER TEXT -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="또는"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <!-- REGISTER NEW BUTTON -->
        <Button
            android:id="@+id/btnRegisterNew"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#1A1A1A"
            android:text="@string/login_register_new"
            android:textColor="@color/yellow_main"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- INFO TEXT -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="16세 이상만 이용 가능합니다"
            android:textColor="#888888"
            android:textSize="11sp"
            android:gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
